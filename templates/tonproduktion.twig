{% extends "_layouts/main" %}

{% block main %}
<section class="t-section">
  <div class="m-ticker">
    {% for entry in craft.entries.section('laufschriftTonproduktion').all() %}
      <span class="m-ticker__item">
        {% if entry.relatedEntry | length %} <a href={{entry.relatedEntry.one().url }}> {% endif %}
          {{entry.title}}
        {% if entry.relatedEntry | length %} </a> {% endif %}
      </span>
    {% endfor %}
  </div>
</section>
<section class="t-section">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <p class="t-page__subtitle">{{ entry.rteDescription }}</p>
      </div>
    </div>
  </div>
</section>
<section class="t-section">
  <div class="container">
    <div class="row">
      <div class="col">
        <h1>{{ entry.pageTitle }}</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-9 align-self-end">
      </div>
    </div>
  </div>
</section>
{% endblock %}